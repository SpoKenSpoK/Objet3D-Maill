#!/bin/bash

echo "-- Compilation --"
g++ -Wall -c main.cpp face.cpp point.cpp mesh.cpp -fopenmp

file=`ls|grep main.o`

if [ "$file" = "main.o" ];then
g++ -Wall -o main main.o face.o point.o mesh.o -fopenmp -lrt

rm *.o

echo "-- Execution --"
free
echo " --------------------------------------------------- "

time ./main
echo " "

else
	echo "-- Error: Failed compilation --"
fi
