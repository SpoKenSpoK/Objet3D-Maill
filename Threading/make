#!/bin/bash

echo "-- Compilation --"
g++ -Wall -c main.cpp ../Sequentiel/face.cpp ../Sequentiel/point.cpp ../Sequentiel/mesh.cpp -lpthread

file=`ls|grep main.o`

if [ "$file" = "main.o" ];then
g++ -Wall -o main main.o face.o point.o mesh.o -lpthread

echo "-- Execution --"

echo "-----------------------------------------------------"

memfreestart=`cat /proc/meminfo | grep MemFree`
echo "start : "$memfreestart > infomem.txt

time ./main
echo `cat infomem.txt`

else
	echo "-- Error: Failed compilation --"
	rm *.o
	exit
fi

echo "------------------------------------------------------"
echo "Voulez-vous afficher la documentation en ligne ? (y/n)"
read y

if [ $y = "y" ]; then
firefox ../Doxygen/html/annotated.html

fi

echo "		@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@"
echo "		@         Projet Systeme - M3101 :       @"
echo "		@       Programmation avec Thread        @"
echo "		@ Calcul de surface d'un Objet 3D Maill√© @"
echo "		@   Guillaume BOEHM & Thibault HECKEL    @"
echo "		@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@"

rm *.o

exit
